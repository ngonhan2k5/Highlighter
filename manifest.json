{
    "name": "Highlighter",
    "version": "0.0.1",
    "description": "A Chrome extension that highlighting predefined keywords",
    "permissions": ["storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [ {
        "all_frames": false,
        "js": [ "highlight.js" ],
        "css": ["highlight.css"],
        "matches": [ "<all_urls>" ],
        "run_at": "document_idle"
     } ],

     "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
      }
  }